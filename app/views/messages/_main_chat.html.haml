.chat-main
  .chat-main__group-info
    .left-info
      .left-info__group-name
        = @group.name
      .left-info__group-member
        Member:
        - @group.users.each do |members|
          = members[:name]
    .right-info
      = link_to edit_group_path(@group), class: "Edit__btn" do
        Edit
  .chat-main__message-lists
    = render @messages

  .chat-main__message-form
    = form_for([@group, @message], html: {class: 'input-box'}) do |f|
      .input-box__bar
        = f.text_field :content, class: 'input-box__bar__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__bar__image' do
          %i{class: "far fa-image"}
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit-btn'